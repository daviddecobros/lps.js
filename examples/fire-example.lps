maxTime(100).
cycleInterval(500).
fluents([
  fire(I),
  location(L)
]).
actions([
  deployFirefighters,
  moveFirefightersTo(_),
  putOutFire(_),
  ignite(_),
  returnToStation
]).

observe(ignite(sofa), 3, 4).
observe(ignite(grill), 3, 4).

flammable(sofa).
flammable(grill).

initially([
  location(station)
]).

fire(Item, T1), location(station, T1) -> deal_with_fire(Item, T1, T2).

deal_with_fire(Item, T1, T3) <-
  location(station, T1),
  deployFirefighters(T1, T2),
  handleItemWithFire(Item, T2, T3).

deal_with_fire(Item, T1, T3) <-
  not location(station, T1),
  handleItemWithFire(Item, T1, T3).

% base case for deal_with_fire, that is no more fire and we return to station
deal_with_fire(_, T1, T2) <-
  not fire(_, T1),
  returnToStation(T1, T2).

handleItemWithFire(Item, T1, T3) <-
  fire(Item, T1),
  location(Item, T1),
  putOutFire(Item, T1, T2),
  deal_with_fire(_, T2, T3).

handleItemWithFire(Item, T1, T3) <-
  fire(Item, T1),
  not location(Item, T1),
  moveFirefightersTo(Item, T1, T2),
  deal_with_fire(Item, T2, T3).

initiates(ignite(Object), fire(Object)) <- flammable(Object).

terminates(putOutFire(I), fire(I)).
updates(deployFirefighters, location(_), location(otw)).
updates(moveFirefightersTo(L), location(_), location(L)).
updates(returnToStation, location(_), location(station)).


<- not location(X, T), putOutFire(X, T, _).
<- moveFirefightersTo(X, T1, T2), moveFirefightersTo(Y, T1, T2), X != Y.
<- putOutFire(X, T1, T2), putOutFire(Y, T1, T2), X != Y.
